<%- include('../includes/head.ejs') %>
<main class="login-main">
  <div class="login-container">
    <h2>Login</h2>
    <form class="login-form" action="/login" method="post">
      <div>
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="<%= errorMessage.find(e=>e.path === 'email') ? 'invalid' : 'valid'%>"
        />
      </div>
      <div>
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="<%= errorMessage.find(e=>e.path === 'password') ? 'invalid' : 'valid'%>"
        />
      </div>
      <% if (errorMessage) { %> <%for(let error of errorMessage){ %>
      <div class="error-message-div">
        <p class="error-message"><%= error.msg%></p>
      </div>
      <% } %> <%} %>

      <div>
        <button class="primary" type="submit">Login</button>
        <a href="/register" id="auth-a">Don't you have a account?</a>
        <a href="/reset" id="auth-r">Forgot your password?</a>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      </div>
    </form>
  </div>
</main>

<%- include('../includes/footer.ejs') %>
