<%- include('../includes/head.ejs') %>
<main>
  <div class="form-capsule">
    <div class="center">
      <h2 class="form-header">
        <% if (editing) { %> Edit <% } else{%>Add<%}%> Product
      </h2>
      <div class="border-bottom"></div>
    </div>
    <form
      class="admin-add-product-form"
      action="/admin/<% if (editing) { %>edit-product<% } else{%>add-product<%} %>"
      method="post"
    >
      <div class="form-div">
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          value="<% if (editing) { %><%= product.title %><% } %>"
        />
      </div>
      <div class="form-div">
        <label for="imageUrl">Image</label>
        <input
          type="text"
          name="imageUrl"
          value="<% if (editing) { %><%= product.imageUrl %><% } %>"
        />
      </div>
      <div class="form-div">
        <label for="description">Description</label>
        <textarea name="description" cols="30" rows="3">
<% if (editing) { %><%= product.description %><% } %></textarea
        >
      </div>
      <div class="form-div">
        <label for="price">Price</label>
        <input
          type="number"
          name="price"
          step="0.01"
          value="<% if (editing) { %><%= product.price %><% } %>"
        />
      </div>
      <% if (editing) { %>
      <input type="hidden" name="productID" value="<%= product._id %>" />
      <%} %>
      <button type="submit" class="primary">
        <% if (editing) { %> Update <% } else{%> Add <% }%> Product
      </button>
    </form>
  </div>
</main>
<%- include('../includes/footer.ejs') %>
